<%= render "refinery/pages/left_body_content" %>

<section id='middle_body_content'>
  <div class="body">
    <%= render "refinery/pages/middle_body_header" %>

    <% cache "page_parts/#{@page.id}/middle_body_content/#{params[:locale]}" do %>
    <%= raw content_of(@page, :middle_body)  %>

    <div id="disqus_thread"></div>
    <% end %>

    <%= content_for :javascripts do  %>

        <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'moravskoslovenskydhcup'; // required: replace example with your forum shortname


            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <% end %>

  </div>

  <%= render "refinery/pages/author_info" %>
</section>

<%= render "refinery/pages/right_body_content" %>





